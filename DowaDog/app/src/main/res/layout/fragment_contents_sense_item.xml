<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="370dp">
    <RelativeLayout
        android:id="@+id/view_contents_sense_empty"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="348dp"/>

    <LinearLayout
        android:layout_marginTop="0.8dp"
        android:id="@+id/layout_contents_sense_frame"
        android:layout_centerHorizontal="true"
        android:layout_width="299dp"
        android:layout_height="347dp"
        android:background="@drawable/contents_background"
        android:elevation="6dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contents_sense_item_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="26.6dp"
            android:layout_marginEnd="63.4dp"
            android:textColor="#434343"
            android:fontFamily="@font/nanum_extra_bold"
            android:textSize="19sp"
            android:text="새로운 가족을 맞이할 준비, 어렵지 않아요"/>


        <TextView
            android:id="@+id/tv_contents_sense_item_sub"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginStart="26.6dp"
            android:layout_marginEnd="62.4dp"
            android:layout_marginTop="11dp"
            android:textColor="#bebebe"
            android:fontFamily="@font/nanum_round"
            android:textSize="14sp"
            android:text="낯선 첫만남, 애정과 신뢰를 나누는 법"/>

        <ImageView
            android:id="@+id/img_contents_sense_item_feed"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pic1"
            />


    </LinearLayout>



</RelativeLayout>