<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageActivity"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_tab_bar_mypage_act"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="1dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back_btn_sign_id_set_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/back_arrow_btn" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanum_bold"
            android:text="마이페이지"
            android:textColor="#707070"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_profile_modify_mypage_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tab_bar_mypage_act"
        android:layout_marginTop="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_mypage_act"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/mypage_profile_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_toRightOf="@+id/img_profile_mypage_act"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_round"
                android:lineSpacingExtra="8sp"
                android:text="미키와 함께하는"
                android:textColor="#434343"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_extra_bold"
                android:text="최형윤님"
                android:textColor="#434343"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_user_profile_mypage_act"
            android:fontFamily="@font/nanum_light"
            android:text="설정"
            android:textColor="#434343"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/btn_user_profile_mypage_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginStart="8dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_ani_scrap_box_mypage_act"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/rl_profile_modify_mypage_act"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <!--관심 동물-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:text="관심 동물"
                    android:textColor="#434343"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_round"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="6"
                android:textColor="#434343"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:background="#e0e0e0" />

        <!--스크랩-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:text="스크랩"
                    android:textColor="#434343"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_round"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="#434343"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="56dp"
            android:background="#e0e0e0" />

        <!--내가 쓴글-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:text="내가 쓴글"
                    android:textColor="#434343"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_round"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="12"
                android:textColor="#434343"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mailbox_mypage_act"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ll_ani_scrap_box_mypage_act"
        android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:paddingLeft="16dp"
            android:background="#ffffff"
            android:elevation="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#434343"
                android:fontFamily="@font/nanum_light"
                android:layout_marginTop="18dp"
                android:text="기다릴개에서"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#434343"
                android:fontFamily="@font/nanum_bold"
                android:layout_marginTop="8dp"
                android:text="보내는 따뜻한편지"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_my_page_act"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rl_mailbox_mypage_act">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nanum_bold"
            android:text="설정"
            android:textColor="#434343"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#c7c7c7" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_question_my_page_act"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rl_setting_my_page_act">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nanum_bold"
            android:text="자주 묻는 질문"
            android:textColor="#434343"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#c7c7c7" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_logout_setting_my_page_act"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rl_question_my_page_act">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nanum_bold"
            android:text="로그아웃"
            android:textColor="#434343"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>