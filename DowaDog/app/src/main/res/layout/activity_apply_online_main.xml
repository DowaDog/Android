<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apply.online.ApplyOnlineMainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        android:elevation="1dp"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_apply_main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/back_arrow_btn" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanum_bold"
            android:text="온라인 신청서"
            android:textColor="#707070"
            android:textSize="18sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="103"
            android:background="@drawable/adopt_background_img"
            >

            <View
                android:id="@+id/view_online_apply_main_baseline"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_centerInParent="true"

                />

            <TextView
                android:id="@+id/tv_online_apply_main_infotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_online_apply_main_baseline"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:textSize="24sp"
                android:textColor="#707070"
                android:includeFontPadding="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#707070"
                android:fontFamily="@font/nanum_light"
                android:text="다음과 같은 단계로"
                android:layout_above="@+id/tv_online_apply_main_infotext"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_apply_online_main_write"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_alignParentBottom="true"
        android:background="#ffc223">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_extra_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="작성하기"
            />

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>