<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PressedAdoptActivity"
    android:background="#FFFFFF"
    >

    <!--상단바-->
    <RelativeLayout
        android:id="@+id/rl_top_bar_pressed_adopt_act"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="1dp"
        android:background="#FFFFFF">

        <!--백버튼-->
        <RelativeLayout
            android:id="@+id/btn_back_pressed_adopt_act"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_marginHorizontal="16dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_bold"
                android:textSize="18sp"
                android:textColor="#707070"
                android:layout_centerInParent="true"
                android:text="입양 하기"
                android:layout_centerVertical="true"
                />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top_bar_pressed_adopt_act"
        android:layout_above="@id/btn_adopt_pressed_adopt_act">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/adopting_call_img"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호소"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:textSize="19sp"
                    android:textColor="#434343"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로 연락해"
                    android:fontFamily="@font/nanum_round"
                    android:textSize="19sp"
                    android:textColor="#434343"/>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜와 장소"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:textSize="19sp"
                    android:textColor="#434343"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="를 잡으세요!"
                    android:fontFamily="@font/nanum_round"
                    android:textSize="19sp"
                    android:textColor="#434343"/>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'문의하기'를 누르면 해당 보호소로 연결됩니다."
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="#a6a6a6"
                android:fontFamily="@font/nanum_light"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_adopt_pressed_adopt_act"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffc233"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의 하기"
            android:fontFamily="@font/nanum_extra_bold"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#ffffff"/>



    </RelativeLayout>

</RelativeLayout>