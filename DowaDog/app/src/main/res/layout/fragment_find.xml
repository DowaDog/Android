<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_adopt_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imag_fragment_fund_illus"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:src="@drawable/dog_adopt_a_img"
                    />

                <RelativeLayout
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#434343"
                        android:text="긴급"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_extra_bold"
                        android:layout_marginStart="16dp"
                        />

                    <TextView
                        android:id="@+id/btn_find_fragment_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#707070"
                        android:fontFamily="@font/nanum_round"
                        android:text="더보기"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="18dp"
                        />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_find_fragment_urgent"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginEnd="11dp">


                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#434343"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:text="새로 구조된 아이들"
                    android:layout_marginStart="16dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_find_fragment_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="14dp"

                    android:layout_marginEnd="11dp">


                </android.support.v7.widget.RecyclerView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_adopt_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filter_floating_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>