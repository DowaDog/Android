<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_slide_up_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layout_home_fragment_slide_pannel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="103dp"
        android:background="@drawable/fragment_home_slide_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/btn_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drawer_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_home_fragment_slide_contents"
                android:layout_below="@+id/btn_slide"
                android:layout_above="@+id/layout_slide_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/layout_slide_indicator"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="#42ffc233">

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
