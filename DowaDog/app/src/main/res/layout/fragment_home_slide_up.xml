<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_slide_up_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layout_home_fragment_slide_pannel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:background="@drawable/fragment_home_slide_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/btn_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_drag_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                />

            <com.takhyungmin.dowadog.utils.CustomViewPager
                android:id="@+id/vp_home_fragment_slide_contents"
                android:layout_below="@+id/btn_slide"
                android:layout_above="@+id/layout_slide_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.takhyungmin.dowadog.utils.CustomViewPager>

            <RelativeLayout
                android:id="@+id/layout_slide_indicator"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/indicator_slide_first"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/dot_indicator_orange"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/indicator_slide_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/dot_indicator_gray"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/indicator_slide_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/dot_indicator_gray"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/indicator_slide_fourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/dot_indicator_gray"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/indicator_slide_fifth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/dot_indicator_gray"
                        />
                    
                    
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
