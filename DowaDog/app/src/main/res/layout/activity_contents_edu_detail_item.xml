<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_contents_edu_detail_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#484848"
        android:fontFamily="@font/nanum_bold"
        android:lineSpacingExtra="8sp"
        android:text="@string/edu_detail_subtitle"
        android:layout_gravity="center"
        />
    
    <ImageView
        android:id="@+id/img_contents_edu_detail_item_image"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        />

    <TextView

        android:id="@+id/tv_contents_edu_detail_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#484848"
        android:lineSpacingExtra="8sp"
        android:fontFamily="@font/nanum_round"
        android:layout_marginTop="20dp"
        android:text="@string/long_text"/>


</LinearLayout>