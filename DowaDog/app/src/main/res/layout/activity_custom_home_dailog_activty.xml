<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomHomeDailogActivty"
    android:background="@android:color/transparent"
    xmlns:attrs="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_root_box_home_idalog_activity"
        android:layout_width="264dp"
        android:layout_height="410dp"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_home_dialog_box">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_custom_home_dialog_activity"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            />

        <RelativeLayout
            android:id="@+id/rl_indicator_community_detail_act"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/vp_custom_home_dialog_activity"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_first_indicator_home_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dot_indicator_orange" />

                <ImageView
                    android:id="@+id/iv_second_indicator_home_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dot_indicator_gray" />

                <ImageView
                    android:id="@+id/iv_third_indicator_home_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dot_indicator_gray" />

                <ImageView
                    android:id="@+id/iv_fourth_indicator_home_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dot_indicator_gray" />

                <ImageView
                    android:id="@+id/iv_fifth_indicator_home_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dot_indicator_gray" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btn_start_custom_home_dialog_activity"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_home_dialog_bottom_box"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작할개요!"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanum_bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>