<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47000000">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_box"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_bottom_box_custom_dialog"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_first_question_custom_dialog_community_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_modify_custom_dialog_community_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글 수정"
                    android:textSize="17sp"
                    android:textColor="#707070"
                    android:fontFamily="@font/nanum_bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e0e0e0"/>

            <RelativeLayout
                android:id="@+id/btn_second_question_custom_dialog_community_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_delete_custom_dialog_community_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글 삭제"
                    android:textSize="17sp"
                    android:textColor="#707070"
                    android:fontFamily="@font/nanum_bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom_box_custom_dialog_community_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_dialog_bottom_box">

            <RelativeLayout
                android:id="@+id/btn_left_custom_dialog_community_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_left_custom_dialog_community_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:fontFamily="@font/nanum_bold"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"/>

            <RelativeLayout
                android:id="@+id/btn_right_custom_dialog_community_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_right_custom_dialog_community_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:fontFamily="@font/nanum_bold"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>