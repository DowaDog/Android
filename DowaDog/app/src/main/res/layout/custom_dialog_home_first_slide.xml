<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="305dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_1step_img"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/rl_bottom_custom_dialog_home_first_slide"
        android:layout_marginBottom="14dp"
        />


    <TextView
        android:id="@+id/tv_bottom_custom_dialog_home_first_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입양하기 카테고리에서 새로운 가족을\n찾고 있는 아이들을 만나보세요."
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#555555"
        android:lineSpacingExtra="7sp"
        android:fontFamily="@font/nanum_light"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/rl_bottom_custom_dialog_home_first_slide"
        android:layout_above="@+id/tv_bottom_custom_dialog_home_first_slide"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:id="@+id/rl_adopt_custom_dialog_home_first_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp">
            <TextView
                android:id="@+id/tv_adopt_custom_dialog_home_first_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입양하기"
                android:textSize="17sp"
                android:textColor="#555555"
                android:fontFamily="@font/nanum_extra_bold"
                />

            <TextView
                android:layout_toRightOf="@+id/tv_adopt_custom_dialog_home_first_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에서"
                android:textSize="17sp"
                android:textColor="#555555"
                android:fontFamily="@font/nanum_light"
                />

        </RelativeLayout>


        <TextView
            android:layout_below="@+id/rl_adopt_custom_dialog_home_first_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 가족을 맞이해 보세요!"
            android:textSize="17sp"
            android:textColor="#555555"
            android:fontFamily="@font/nanum_light"
            />


    </RelativeLayout>

</RelativeLayout>