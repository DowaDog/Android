<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apply.online.ApplyOnlineFirstActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        android:elevation="1dp"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_apply_first_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/back_arrow_btn" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanum_bold"
            android:text="온라인 신청서"
            android:textColor="#707070"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"

        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1단계,"
                android:fontFamily="@font/nanum_extra_bold"
                android:textColor="#ffc233"
                android:includeFontPadding="false"
                android:textSize="26sp"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_light"
            android:textColor="#242424"
            android:textSize="26sp"
                android:layout_marginTop="9dp"
                android:includeFontPadding="false"
                android:text="개인정보를 입력해주세요"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_light"
                android:textColor="#707070"
                android:textSize="15sp"
                android:layout_marginTop="9dp"
                android:includeFontPadding="false"
                android:text="체크박스는 중복 선택이 불가능 합니다"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="69dp">
            <RelativeLayout
                android:id="@+id/layout_apply_first_frame"
                android:layout_width="69dp"
                android:layout_height="69dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_apply_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pic1"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_applpy_first_upload"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/adopt_camera_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@+id/layout_apply_first_frame"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view_online_apply_first_baseline"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:text="피카츄"
                    android:includeFontPadding="false"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanum_extra_bold"
                    android:id="@+id/tv_online_apply_first_name"
                    android:layout_above="@+id/view_online_apply_first_baseline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="(남자, 23세)"
                    android:layout_toRightOf="@+id/tv_online_apply_first_name"
                    android:includeFontPadding="false"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nanum_round"
                    android:textSize="13sp"
                    android:id="@+id/tv_online_apply_first_age"
                    android:layout_above="@+id/view_online_apply_first_baseline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                
                <RelativeLayout
                    android:layout_width="78dp"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/online_apply_first_edit">

                    <TextView
                        android:text="회원정보 수정"
                        android:fontFamily="@font/nanum_round"
                        android:textSize="11sp"
                        android:textColor="#ffc233"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        />

                </RelativeLayout>

            </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#727272"
                        android:text="연락처"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_online_apply_first_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-3643-9714"
                        android:textSize="14sp"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_round"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#727272"
                        android:text="이메일"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_online_apply_first_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sket8993@naver.com"
                        android:textSize="14sp"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_round"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_online_apply_first_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#727272"
                        android:text="주소"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_centerVertical="true"
                        />

                    <EditText
                        android:id="@+id/edit_online_apply_first_address"
                        android:layout_toRightOf="@+id/text_online_apply_first_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="입력해주세요"
                        android:background="@null"
                        android:textSize="14sp"
                        android:textCursorDrawable="@null"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_round"
                        android:layout_centerVertical="true"
                        android:textDirection="rtl"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="16dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_online_apply_first_vocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#727272"
                        android:text="직업"
                        android:fontFamily="@font/nanum_bold"
                        android:layout_centerVertical="true"
                        />

                    <EditText
                        android:id="@+id/edit_online_apply_first_vocation"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/text_online_apply_first_vocation"
                        android:layout_height="wrap_content"
                        android:hint="입력해주세요"
                        android:textDirection="rtl"
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:textSize="14sp"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_round"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="30dp"
                        />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f6f6f6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족 동의 여부"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/nanum_bold"
                android:textSize="14sp"
                />
            
            <LinearLayout
                android:id="@+id/layout_online_apply_first_agree"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/layout_online_apply_first_disagree"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#707070"
                    android:text="동의함"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_round"

                    />

                <ImageView
                    android:id="@+id/btn_online_apply_first_agree_check"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/adopt_1step_check_grey"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_online_apply_first_disagree"
                android:layout_width="wrap_content"
                android:layout_height="24dp"

                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#707070"
                    android:text="동의하지 않음"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanum_round"

                    />

                <ImageView
                    android:id="@+id/btn_online_apply_first_disagree_check"
                    android:layout_width="24dp"
                    android:src="@drawable/adopt_1step_check_grey"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>

        </RelativeLayout>




    <RelativeLayout
        android:id="@+id/btn_apply_online_first_next"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="#ffc223">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_extra_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="다음"
            />

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>